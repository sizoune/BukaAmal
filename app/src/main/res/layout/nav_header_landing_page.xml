<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/merahBukaAmal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/ic_user2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/layoutnama"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/profile_image"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/namaProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/asalProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bandung, Jawa Barat"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:layout_below="@+id/namaProfile"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</RelativeLayout>
