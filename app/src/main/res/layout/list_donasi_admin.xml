<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView1"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    android:orientation="vertical"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_listrowgalangdanasaya"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="2dp"
                android:paddingTop="10dp"
                android:text="Nama Donatur :"
                android:textColor="@color/hitam"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtNamaDonatur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/Nama"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Nama"
                android:textColor="@color/hitam"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNamaDonatur"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="22dp"
                android:paddingTop="5dp"
                android:text="Judul Berita :"
                android:textColor="@color/hitam"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtJudulDonasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNamaDonatur"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/Judul"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Judul"
                android:textColor="@color/hitam"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtJudulDonasi"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="2dp"
                android:paddingTop="5dp"
                android:text="Jumlah Donasi :"
                android:textColor="@color/hitam"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtJumlahDonasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtJudulDonasi"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/Jumlah"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Jumlah"
                android:textColor="@color/hitam"
                android:textSize="18sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"
                android:text="Lihat Selengkapnya"
                android:textColor="@color/merah"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>