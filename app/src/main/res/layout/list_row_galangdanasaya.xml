<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView1"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="1dp"
    android:orientation="vertical"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_listrowgalangdanasaya"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="165dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageGalangDanasaya"
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="bottom" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtKategoriGalangdanasaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="2dp"
                android:paddingTop="10dp"
                android:text="Kategori"
                android:textColor="@color/hitam"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescgalangdanasaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtKategoriGalangdanasaya"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingRight="2dp"
                android:paddingTop="5dp"
                android:text="Deskripsi"
                android:textColor="@color/hitam"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp"
                android:text="Lihat Selengkapnya"
                android:textColor="@color/merah"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>