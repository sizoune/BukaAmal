<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="160dp"
    android:layout_height="215dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="4dp"
    android:background="@android:color/white"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/covermodalUkmrow"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/covermodalUkmrow"
            android:layout_alignParentStart="true"
            android:background="@color/merahBukaAmal">

            <TextView
                android:id="@+id/txtTenggatWaktuUKM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:text="12 Hari Lagi"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtPersenTerkumpul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtTenggatWaktuUKM"
                android:layout_alignBottom="@+id/txtTenggatWaktuUKM"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif"
                android:text="80%"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtJudulUKM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/covermodalUkmrow"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="Kerajinan Khas Kalimantan"
            android:textColor="@color/hitam"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSebagianDescUKM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtJudulUKM"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:text="Sebagian text"
            android:textColor="@color/hitam"
            android:textSize="12dp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txtSebagianDescUKM"
            android:layout_marginTop="5dp"
            android:background="#9E9E9E" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view">

            <TextView
                android:id="@+id/dum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:fontFamily="sans-serif"
                android:text="Dana yang terkumpul"
                android:textAlignment="center"
                android:textColor="@color/hitam"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtDanaTerkumpulUKM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dum"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif"
                android:text="Rp. 1.000.000.000"
                android:textAlignment="center"
                android:textColor="@color/merahBukaAmal"
                android:textSize="12dp" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

