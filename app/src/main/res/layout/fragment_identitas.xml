            <EditText
                android:id="@+id/edAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edNamaLengkap"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_textmulti"
                android:fontFamily="sans-serif"
                android:gravity="top|left"
                android:hint="@string/hintAlamat"
                android:inputType="textMultiLine"
                android:lines="5"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:scrollHorizontally="false"
                android:textColor="@color/hitam"
                android:textColorHint="@drawable/selector_hint"
                android:textSize="14sp">

            </EditText>

            <EditText
                android:id="@+id/edNoTelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edAlamat"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_pinggir_merah"
                android:fontFamily="sans-serif"
                android:hint="@string/hintNoTel"
                android:inputType="phone"
                android:minHeight="45dp"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textColor="@color/hitam"
                android:textColorHint="@drawable/selector_hint"
                android:textSize="14sp"></EditText>

            <Spinner
                android:id="@+id/spinBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edNoTelp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_spinner"
                android:hint="Bank"
                android:inputType="date"
                android:minHeight="45dp"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textColor="@color/hitam"
                android:textColorHint="@drawable/selector_hint"
                android:textSize="14sp">

            </Spinner>


            <EditText
                android:id="@+id/edNoRek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinBank"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_pinggir_merah"
                android:fontFamily="sans-serif"
                android:hint="@string/hintNoRek"
                android:inputType="number"
                android:minHeight="45dp"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textColor="@color/hitam"
                android:textColorHint="@drawable/selector_hint"
                android:textSize="14sp"></EditText>

            <Button
                android:id="@+id/btnFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edNoRek"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/selector_button_pinggirmerah"
                android:drawable="@mipmap/ic_plus"
                android:drawableLeft="@mipmap/ic_plus"
                android:drawablePadding="-67dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingLeft="80dp"
                android:text="@string/tambahFotoKTP"
                android:textAllCaps="false"
                android:textColor="@color/merahBukaAmal"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/fotoKTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnFoto"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="matrix" />

            <Button
                android:id="@+id/btnSimpanLanjut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fotoKTP"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_button_login"
                android:elevation="2dp"
                android:gravity="center"
                android:text="@string/simpanlanjut"
                android:textAllCaps="false"
                android:textColor="@color/putih" />

        </RelativeLayout>
    </ScrollView>

</FrameLayout>
