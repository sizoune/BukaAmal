            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titleIdentitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Identitas"
                android:textColor="@color/hitam"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNamaLengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleIdentitas"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_pinggir_merah"
                android:fontFamily="sans-serif"
                android:hint="@string/hintNamaLengkap"
                android:inputType="textPersonName"
                android:minHeight="45dp"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textColor="@color/hitam"
                android:textColorHint="@drawable/selector_hint"
                android:textSize="14sp">

            </EditText>

