<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.studio.pattimura.bukaamal.Fragment.DetailProfileFragment">

    <RelativeLayout
        android:id="@+id/layoutdetail"
        android:layout_width="match_parent"
        android:layout_height="213dp">

        <ImageView
            android:id="@+id/bgdetailprofile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/merahButton" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/defaultpicture"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/txtNameDetailProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewProfile"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:text="Songko"
            android:textColor="@color/putih"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAsalDetailProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNameDetailProfile"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:text="Bandung, Jawa Barat"
            android:textColor="@color/putih"
            android:textSize="16sp" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabsDetailprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/putih"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/putih"
            app:tabTextColor="@color/abu" />
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerdetailprofile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
